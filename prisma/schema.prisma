generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum JobType {
  Pipeline
  Marialise
}

model Job {
  id         String  @id @default(uuid())
  type       JobType
  definition Json
  interval   String
  stopped    Boolean
  force_run  Boolean

  created_at DateTime  @default(now())
  deleted_at DateTime?

  executions Execution[]
}

enum Status {
  Scheduled
  Running
  Finished
  Crashed
}

model Execution {
  id     String  @id @default(uuid())
  status Status
  data   String?

  started_at DateTime  @default(now())
  stopped_at DateTime?

  job    Job    @relation(fields: [job_id], references: [id])
  job_id String

  seen_bolig_portal_listings BoligPortalListing[]
}

model Listing {
  id         String    @id @default(uuid())
  created_at DateTime  @default(now())
  updated_at DateTime?
  deleted_at DateTime?

  address String

  size           String
  type           String
  rooms          String
  floor          String
  furnished      String
  petsAllowed    String
  balcony        String
  washingMachine String
  dishwasher     String
  elevator       String

  monthlyRent   Float
  Aconto        String?
  deposit       String
  prepaidRent   String?
  moveInPrice   String
  availableFrom String
  rentalPeriod  String

  bolig_portal_listing    BoligPortalListing? @relation(fields: [bolig_portal_listing_id], references: [id])
  bolig_portal_listing_id String?
}

model BoligPortalListing {
  id          String @id @default(uuid())
  case_number String @unique
  url         String

  last_seen_on_execution    Execution @relation(fields: [last_seen_on_execution_id], references: [id])
  last_seen_on_execution_id String

  listing Listing[]
}
